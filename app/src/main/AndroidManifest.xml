<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="digitalgarden.justifiedreader" >

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name="digitalgarden.justifiedreader.bidict.ApplicationWithGlobals"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".JustifiedReaderActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".bidict.BiDictActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name=".bidict.BiDictIndicesActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name=".fileselector.FileSelectorActivity" >
            android:label="@string/app_name"
        </activity>

        <activity
            android:name=".teacher.TeacherActivity" >
            android:label="@string/app_name"
        </activity>
        
    </application>
    <!--android:name=".JustifiedReaderActivity"-->
    <!--android:name=".bidict.BiDictIndicesActivity"-->
</manifest>
